    "include": ["src"],
    "exclude": ["node_modules", "dist"],
    "compilerOptions": {
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "moduleResolution": "node16",
        "module": "node16",
        "target": "es2022",
        "outDir": "dist",
        "declaration": true,
        "skipLibCheck": true
    }
}

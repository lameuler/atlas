---
import type { Declaration } from '../model'
import CodeExcerpt from './CodeExcerpt.astro'
import DocsBlockSection from './DocsBlockSection.astro'
import Heading from './Heading.astro'

interface Props {
    declaration: Declaration
}

const { declaration } = Astro.props
---

<Heading {...declaration.heading} />

<CodeExcerpt excerpt={declaration.excerpt} />

<DocsBlockSection block={declaration.docs?.summary} />

<DocsBlockSection block={declaration.docs?.remarks} />
{declaration.docs?.examples?.map((block) => <DocsBlockSection {block} />)}

<style></style>

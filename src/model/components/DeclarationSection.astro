---
import type { Declaration } from '../model'
import CodeExcerpt from './CodeExcerpt.astro'
import DocsSection from './DocsSection.astro'
import Heading from './Heading.astro'

interface Props {
    declaration: Declaration
    source?: boolean
}

const { heading, excerpt, docs, source } = Astro.props.declaration
---

<Heading {...heading} />

<CodeExcerpt {excerpt} />
{
    Astro.props.source === true && source?.url && (
        <nav>
            <a href={source.url}>
                <svg width="20" height="20" viewBox="0 0 24 24" class="icon">
                    <path d="M7 8l-4 4l4 4" />
                    <path d="M17 8l4 4l-4 4" />
                    <path d="M14 4l-4 16" />
                </svg>
                View source code
            </a>
        </nav>
    )
}

<DocsSection {docs} />

{/* TODO show inherited from */}

<style>
    nav {
        margin: calc(var(--height) * -0.7em) 0 0 0;
    }
    nav a {
        text-decoration: none !important;
        display: inline-flex;
        align-items: center;
        gap: 0.25em;
        font-size: 0.9em;
    }
    nav svg {
        height: 1.25em;
        width: 1.25em;
        display: inline-block;
    }
</style>

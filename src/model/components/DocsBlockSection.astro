---
import { DocsBlock } from '../docs.js'
import Heading from './Heading.astro'

interface Props {
    block?: DocsBlock
}

const { block } = Astro.props

let html = ''

if (block) {
    html = await block.render()
}
---

{
    html && (
        <>
            {block?.heading && <Heading {...block.heading} />}
            <Fragment set:html={html} />
        </>
    )
}

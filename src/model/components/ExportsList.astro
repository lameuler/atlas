---
import { DocsHeading } from '../docs'
import { ExportGroup } from '../model.js'
import ExportsItem from './ExportsItem.astro'
import Heading from './Heading.astro'

interface Props {
    heading: DocsHeading
    groups: ExportGroup[]
}

const { heading, groups } = Astro.props
---

<Heading {...heading} />
{
    groups.map(({ heading, declarations }) => (
        <>
            <Heading {...heading} />
            <ul>
                {declarations.map(({ docs, parent }) => (
                    <ExportsItem block={docs.shortSummary} {parent} />
                ))}
            </ul>
        </>
    ))
}

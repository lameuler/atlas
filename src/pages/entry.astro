---
import type { GetStaticPaths } from 'astro'
import { getCollection, render } from 'astro:content'
import PageLayout from '../components/PageLayout.astro'
import { getEntryHref, getNextPage, getPageInfo, getPreviousPage } from '../sidebar.js'

export const getStaticPaths = (async () => {
    const entries = await getCollection('docs')
    return entries
        .map((entry) => {
            let slug: string | undefined = entry.id
            if (slug === 'index') {
                slug = undefined
            }
            return {
                params: { slug },
                props: { entry },
            }
        })
        .filter((e) => e !== undefined)
}) satisfies GetStaticPaths

const { entry } = Astro.props
const { Content, headings } = await render(entry)

const prev = entry.data.prev
    ? getPageInfo(entry.data.prev)
    : getPreviousPage(getEntryHref(entry.id))
const next = entry.data.next ? getPageInfo(entry.data.next) : getNextPage(getEntryHref(entry.id))
---

<PageLayout title={entry.data.title} subtitle={entry.data.subtitle} {headings} {prev} {next}>
    <Content />
</PageLayout>

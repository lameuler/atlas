---
import { Head, HeadImgLinks } from '@lameuler/ler-astro'
import Footer from './Footer.astro'
import Sidebar from './Sidebar.astro'
import Header from './Header.astro'

import '@lameuler/ler-astro/icon.css'
import '../assets/global.css'

import MobileHeader from './MobileHeader.astro'
import LoadFonts from './LoadFonts.astro'

interface Props {
    title: string
    description?: string
}

const { title, description } = Astro.props
---

<!doctype html>
<html lang="en" dir="ltr">
    <Head {title} {description} site="astro-notebook" sep=" | ">
        <LoadFonts />
        <HeadImgLinks
            rel="shortcut icon"
            href="https://ler.quest/icons/favicon{size}.png"
            sizes={[32, 48, 96, 128, 144, 192]}
            type="image/png"
        />
        <HeadImgLinks
            rel="apple-touch-icon"
            href="https://ler.quest/icons/icon{size}.png"
            sizes={[180, 192, 512, 1024]}
            type="image/png"
        />
    </Head>
    <body>
        <Header />
        <MobileHeader />
        <Sidebar />
        <main>
            <slot />
            <Footer />
        </main>
    </body>
</html>

<script>
    addEventListener('keydown', (event) => {
        if (event.key === 'Escape') {
            for (const key of Object.keys(document.body.dataset)) {
                if (key.endsWith('Open')) {
                    delete document.body.dataset[key]
                }
            }
        }
    })
</script>

<style>
    body[data-sidebar-open],
    body:has(dialog[open]) {
        overflow: hidden;
    }
    main {
        display: grid;
        grid-template-rows: 1fr auto;
        padding-top: 5.5rem;
        min-height: 100%;
        max-width: var(--max-w-main);
        position: relative;
        margin: 0 auto;
    }
    @media (min-width: 768px) {
        main {
            padding-left: 13rem;
        }
        main:not(:has(#onthispage)) {
            padding-top: 3rem;
        }
        article {
            padding: 1rem 2rem;
        }
    }
    @media (min-width: 1024px) {
        main {
            padding-top: 3rem;
            padding-right: 12rem;
        }
    }
    @media print {
        main {
            padding: 3rem 0 0 0;
        }
    }
</style>

<style>
    footer {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 0.5rem;
        color: #64748b;
        padding: 1rem 1rem;
        margin: 0 0.5rem;
        border-top: 1px solid var(--line);
    }
    :global(.dark) footer {
        color: #94a3b8;
    }
    div {
        display: flex;
        gap: 0.6rem;
        justify-content: center;
        align-items: center;
    }
    @media (min-width: 640px) {
        div {
            justify-content: start;
        }
    }
    img {
        width: 1.25rem;
        height: 1.25rem;
        margin-inline-end: 0.2rem;
    }
    a {
        font-weight: 450;
    }
    .origin span {
        font-weight: 600;
    }
    .origin {
        padding: 0 0.1rem;
        display: flex;
        align-items: center;
        color: #3a465a;
    }
    :global(.dark) .origin {
        color: #c1ccdd;
    }
    .site {
        padding: 0 0.1rem;
        margin-inline-end: 0.2rem;
    }
    a.url:hover {
        text-decoration: underline;
    }
    svg.icon {
        width: 1.5rem;
        height: 1.5rem;
        display: block;
    }
</style>
